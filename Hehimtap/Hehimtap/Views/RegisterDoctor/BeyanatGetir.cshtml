@model Hehimtap.Models.Beyanat
@{
    ViewBag.Title = "BeyanatGetir";
    Layout = "~/Views/Shared/_DoctorLayout.cshtml";
}



<div class="content-wrapper">

    <div class="col-md-12">
        <!-- general form elements -->
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Xeber Yenile</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form method="post" action="@Url.Action("BeyanatYenile","RegisterDoctor", new {Id = Model.Id })" enctype="multipart/form-data" role="form">
                <div class="card-body">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Ixdisas</label>
                        <input type="text" value="@Model.Ixdisas" name="Ixdisas" class="form-control" id="exampleInputEmail1" placeholder="Ad Basliq Edin">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Tehsil</label>
                        <input type="text" name="Tehsil" value="@Model.Tehsil" class="form-control" id="exampleInputEmail1" placeholder="Ad Metn Edin">
                    </div>



                    <img src="~/Images/@Model.Sekil" height="150" />

                    <div class="form-group">
                        <label for="exampleInputEmail1">Sekil</label>
                        <input type="file" name="Sekil" class="form-control" id="exampleInputEmail1">
                    </div>

                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Yenile</button>
                </div>
            </form>
        </div>
        <!-- /.card -->
        <!-- Form Element sizes -->



    </div>
    </div>