@model Hehimtap.Models.Doctor
@{
    ViewBag.Title = "DoctorProfil";
    Layout = "~/Views/Shared/_DoctorLayout.cshtml";

}


<!DOCTYPE html>



<div class="content-wrapper">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-3">

                    <!-- Profile Image -->
                    <div class="card card-primary card-outline">
                        <div class="card-body box-profile">
                            <div class="text-center">
                                <img class="profile-user-img img-fluid img-circle"
                                     src="~/Images/@ViewBag.sekil"
                                     alt="User profile picture">
                            </div>

                            <h3 class="profile-username text-center">@Model.Ad</h3>

                            <p class="text-muted text-center">@Model.Ixdisas</p>

                            <ul class="list-group list-group-unbordered mb-3">
                                <li class="list-group-item">
                                    <b>Comment sayi</b> <a class="float-right">@ViewBag.comentsay</a>
                                </li>
                                <li class="list-group-item">
                                    <b>Baxi Sayi</b> <a class="float-right">@Model.Baxissayi</a>
                                </li>

                            </ul>


                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                    <!-- About Me Box -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Haqinda</h3>
                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <strong><i class="fas fa-book mr-1"></i> Tehsil</strong>

                            <p class="text-muted">
                                @Model.Ixdisas
                            </p>

                            <hr>

                            <strong><i class="fas fa-map-marker-alt mr-1"></i> Unvan</strong>

                            <p class="text-muted">@Model.Unvan</p>

                            <hr>

                            <strong><i class="fas fa-pencil-alt mr-1"></i>TelefonNO:@Model.Telefon</strong>



                            <hr>

                            <strong><i class="far fa-file-alt mr-1"></i>Mail:</strong>

                            <p class="text-muted">@Model.Mail</p>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
                <div class="col-md-9">
                    <div class="card">
                        <div class="card-header p-2">
                            <ul class="nav nav-pills">
                                <li class="nav-item"><a class="nav-link active" href="#activity" data-toggle="tab">Activity</a></li>
                                
                             
                            </ul>
                        </div><!-- /.card-header -->
                        <div class="card-body">
                            <div class="tab-content">
                                @Html.Action("ComentPartial", "RegisterDoctor",new { Id=Model.Id})
                                <!-- /.tab-pane -->
                                
                                <!-- /.tab-pane -->

                                
                                <!-- /.tab-pane -->
                            </div>
                            <!-- /.tab-content -->
                        </div><!-- /.card-body -->
                    </div>
                    <!-- /.nav-tabs-custom -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    </div>
