    <div class="container margin_60_35">
        <div class="row">
            <div class="col-lg-7">

                @foreach (var x in Model)
                {


                    <div class="strip_list wow fadeIn">
                        <a href="#0" class="wish_bt"></a>
                        <figure>
                            <a href="@Url.Action("MelumatGetr","FindDoctorList" ,new{Id=x.Id})"><img src="~/Images/@x.Sekil" alt=""></a>
                        </figure>
                        <small>@x.Doctor.Ixdisas</small>
                        <h3>Dr.@x.Doctor.Ad @x.Doctor.Soyad</h3>
                        <p>@x.Doctor.Mail</p>
                        <span class="rating">
                       <small>(@ViewBag.say)</small></span>
                        <a href="badges.html" data-bs-toggle="tooltip" data-bs-placement="top" title="Badge Level" class="badge_list_1"><img src="img/badges/badge_1.svg" width="15" height="15" alt=""></a>
