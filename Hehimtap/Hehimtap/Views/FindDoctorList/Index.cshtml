                        </ul>
                    </div>
                }

                <!-- /strip_list -->
                <!-- /strip_list -->

            <nav class="mt-3">
                <ul class="pagination pagination-sm">
                    <li class="page-item disabled">
                        @if (ViewBag.Page - 1 != 0)
                        {
                            <a class="page-link" href="@Url.Action("Index","FindDoctorList",new { page = ViewBag.Page-1  , p = ViewBag.Axtaris})">Əvvəlki</a>
                        }
                    </li>
                    @for (int i = 1; i <= ViewBag.TotalPage; i++)
                    {
                        <li class="page-item  @(i==ViewBag.Page?"active":"")"><a class="page-link" href="@Url.Action("Index","FindDoctorList",new { page = i, p = ViewBag.Axtaris })">@i</a></li>
                    }
                    <li class="page-item">
                        @if (ViewBag.Page + 1 <= ViewBag.TotalPage)
                        {
                            <a class="page-link" href="@Url.Action("Index","FindDoctorList",new { page = ViewBag.Page+1 , p = ViewBag.Axtaris })">Sonrakı</a>
                        }
                    </li>
                </ul>
