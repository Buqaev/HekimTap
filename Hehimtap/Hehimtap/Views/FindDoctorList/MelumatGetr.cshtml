@model Hehimtap.Models.DoctorDto
@{
    ViewBag.Title = "MelumatGetr";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
    int a = 1;
}

<main>
    
    <!-- /breadcrumb -->

    <div class="container margin_60">
        <div class="row">
            <aside class="col-xl-3 col-lg-4" id="sidebar">
                <div class="box_profile">
                    <figure>
                        <img src="~/Images/@Model.doctor.Beyanats.FirstOrDefault().Sekil" alt="" class="img-fluid">
                    </figure>
                    <small>Daxili həkim</small>
                    <h1>
                    
                        @Model.doctor.Ad
                    

                    </h1>
                    <span class="rating">
                       


                            @for (int i = 1; i <= 5; i++)
                            {
                                if (ViewBag.orta >= i)
                                {
                                <i class="icon_star voted"></i>
                            }
                            else
                            {

                                <i class="icon_star"></i>
                            }
                        }
                        
                      
                        <small>(@ViewBag.say)</small>
                        <a href="badges.html" data-bs-toggle="tooltip" data-bs-placement="top" title="Badge Level" class="badge_list_1"><img src="img/badges/badge_1.svg" width="15" height="15" alt=""></a>
                    </span>
                    <ul class="statistic">
                        <li>@Model.doctor.Baxissayi</li>
                       
                    </ul>
                    <ul class="contacts">
                        <li><h6>Address</h6>@Model.doctor.Unvan</li>
                        <li><h6>Telefon NO</h6><a href="">@Model.doctor.Telefon</a></li>
                    </ul>
                    <div class="text-center"><a href="https://www.google.com/maps/dir//Assistance+–+Hôpitaux+De+Paris,+3+Avenue+Victoria,+75004+Paris,+Francia/   48.8606548,2.3348734,14z/data=!4m15!1m6!3m5!1s0x0:0xa6a9af76b1e2d899!2sAssistance+–+Hôpitaux+De+Paris!8m2!3d48.8568376!4d2.3504305!4m7!1m0!1m5!1m1!1s0x47e67031f8c20147:0xa6a9af76b1e2d899!2m2!1d2.3504327!2d48.8568361" class="btn_1 outline" target="_blank"><i class="icon_pin"></i>Xeriteni Ac</a></div>
                </div>
            </aside>
            <!-- /asdide -->

            <div class="col-xl-9 col-lg-8">

                <div class="box_general_2 add_bottom_45">
                    <div class="main_title_4">
                        <h3><i class="icon_circle-slelected"></i>Teyin etmek isdediyin vaxdi daxilet</h3>
                    </div>

                    <div class="calender">
                        <link href="//cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.4.0/fullcalendar.min.css" rel="stylesheet" />
                        <link href="//cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.4.0/fullcalendar.print.css" rel="stylesheet" />




                    </div>

                    <div class="row add_bottom_45">
                        <div class="col-lg-7">
                            <div class="form-group">
                                <div id="calendar"></div>
                                <input type="hidden" id="my_hidden_input">
                                <ul class="legend">
                                    <li><strong></strong>Available</li>
                                    <li><strong></strong>Not available</li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-lg-5">
                            <ul class="time_select version_2 add_top_20">
                                <li>
                                    <input type="radio" id="radio1" name="radio_time" value="09.30am">
                                    <label for="radio1">09.30am</label>
                                </li>
                                <li>
                                    <input type="radio" id="radio2" name="radio_time" value="10.00am">
                                    <label for="radio2">10.00am</label>
                                </li>
                                <li>
                                    <input type="radio" id="radio3" name="radio_time" value="10.30am">
                                    <label for="radio3">10.30am</label>
                                </li>
                                <li>
                                    <input type="radio" id="radio4" name="radio_time" value="11.00am">
                                    <label for="radio4">11.00am</label>
                                </li>
                                <li>
                                    <input type="radio" id="radio5" name="radio_time" value="11.30am">
                                    <label for="radio5">11.30am</label>
                                </li>
                                <li>
                                    <input type="radio" id="radio6" name="radio_time" value="12.00am">
                                    <label for="radio6">12.00am</label>
                                </li>
                                <li>
                                    <input type="radio" id="radio7" name="radio_time" value="01.30pm">
                                    <label for="radio7">01.30pm</label>
                                </li>
                                <li>
                                    <input type="radio" id="radio8" name="radio_time" value="02.00pm">
                                    <label for="radio8">02.00pm</label>
                                </li>
                                <li>
                                    <input type="radio" id="radio9" name="radio_time" value="02.30pm">
                                    <label for="radio9">02.30pm</label>
                                </li>
                                <li>
                                    <input type="radio" id="radio10" name="radio_time" value="03.00pm">
                                    <label for="radio10">03.00pm</label>
                                </li>
                                <li>
                                    <input type="radio" id="radio11" name="radio_time" value="03.30pm">
                                    <label for="radio11">03.30pm</label>
                                </li>
                                <li>
                                    <input type="radio" id="radio12" name="radio_time" value="04.00pm">
                                    <label for="radio12">04.00pm</label>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <!-- /row -->

                    <div class="main_title_4">
                        <h3><i class="icon_circle-slelected"></i>Select visit - treatment</h3>
                    </div>

                    <form method="post" action="@Url.Action("Reserve","FindDoctorList")">
                        <input type="hidden" id="Reservedate" name="Reservedate" />
                        <ul class="treatments clearfix">
                            @foreach (var item in Model.Ziyarets)
                            {
                              
                                string ad = "visit" + a;

                                <li>
                                    <div class="checkbox">
                                        <input type="checkbox" class="css-checkbox" id="@ad" name="@ad">
                                        <label for="@ad" class="css-label">@item.Novu <strong>@item.Qiymet</strong></label>
                                    </div>
                                </li>

                                a++;
                            }
                        </ul>

                            <hr>
                            <div class="text-center"><button type="submit" class="btn_1 medium">Rezerv et</button></div>
                        </form>
                </div>
                <!-- /box_general -->




                <div class="tabs_styled_2">
                    <ul class="nav nav-tabs" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="general-tab" data-bs-toggle="tab" href="#general" role="tab" aria-controls="general" aria-expanded="true">Ümumi məlumat</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="reviews-tab" data-bs-toggle="tab" href="#reviews" role="tab" aria-controls="reviews">Rəylər</a>
                        </li>
                    </ul>
                    <!--/nav-tabs -->
                    
                        <div class="tab-content">
                            <div class="tab-pane fade show active" id="general" role="tabpanel" aria-labelledby="general-tab">

                                <p class="lead add_bottom_30">Asagida Hekimimiz haqinda umumi olaraq melumat ala,nobeti seifede ise hekimimize aidolan reyleri oxuya bilersiz .</p>
                                @foreach (var x in Model.Beyanats)
                                {
                                    <div class="indent_title_in">
                                        <i class="pe-7s-user"></i>
                                        <h3>@x.Doctor.Ad @x.Doctor.Soyad</h3>
                                        <p>Nezer Yetirin</p>
                                    </div>
                                    <div class="wrapper_indent">
                                        <p>Hekimin ixdisai haqinda qisa melumatla tanis olun.</p>
                                        <h6>İxtisaslar</h6>
                                        <div class="row">
                                            <div class="col-lg-6">
                                                <ul class="bullets">
                                                    <li>@x.Ixdisas</li>

                                                </ul>
                                            </div>

                                        </div>
                                        <!-- /row-->
                                    </div>
                                    <!-- /wrapper indent -->

                                    <hr>

                                    <div class="indent_title_in">
                                        <i class="pe-7s-news-paper"></i>
                                        <h3>Təhsil</h3>
                                        <p>Mussum ipsum cacilds, vidis litro abertis.</p>
                                    </div>
                                    <div class="wrapper_indent">
                                        <p>Hekimin Tehsili haqinda qisa Melumat</p>
                                        <h6>Kurikulum</h6>
                                        <ul class="list_edu">
                                            <li><strong>@x.Tehsil</strong> - Doctor of Medicine</li>

                                        </ul>
                                    </div>
                                    <!--  End wrapper indent -->
                                }
                                <hr>





                                <div class="indent_title_in">
                                    <i class="pe-7s-cash"></i>
                                    <h3>Qiymətlər  &amp; Ödənişlər</h3>
                                    <p>Nezer Yetirin</p>
                                </div>
                               
                                    <div class="wrapper_indent">
                                        <p>Siz hekime Muraciet etmezden evvel,muayine novleri ve onlarin qiymetleri ile tanisola bilersi</p>
                                        <div class="table-responsive">
                                           

                                            <table class="table table-striped">
                                                <thead>
                                                    <tr>
                                                        <th>Xidmət - Ziyarət</th>
                                                        <th>Qiymət</th>
                                                    </tr>
                                                </thead>
                                                @foreach (var y in Model.Ziyarets)
                                                {
                                                    <tbody>
                                                        <tr>
                                                            <td>@y.Novu</td>
                                                            <td>$@y.Qiymet</td>
                                                        </tr>
                                                     
                                                    </tbody>
                                                }
                                                </table>
                                                

                                        </div>
                                    </div>
                                    <!--  End wrapper_indent -->
                                
                                </div>
                            <!-- /tab_2 -->

                            <div class="tab-pane fade" id="reviews" role="tabpanel" aria-labelledby="reviews-tab">
                                <div class="reviews-container">
                                    <div class="row">
                                        <div class="col-lg-3">
                                            <div id="review_summary">
                                                <strong>@ViewBag.orta</strong>
                                                <div class="rating">
                                                    @*<i class="icon_star voted"></i>
                                                    <i class="icon_star voted"></i>
                                                    <i class="icon_star voted"></i>
                                                    <i class="icon_star voted"></i>
                                                    <i class="icon_star"></i>*@



                                                    @for (int i = 1; i <= 5; i++)
                                                    {
                                                        if (ViewBag.orta >= i)
                                                        {
                                                            <i class="icon_star voted"></i>
                                                        }
                                                        else
                                                        {

                                                            <i class="icon_star"></i>
                                                        }
                                                    }
                                                </div>
                                                <small >@*Hekime Aid*@ Rey Sayi <h6 style="color:yellow">@Model.comments.Count()</h6> </small>
                                            </div>
                                        </div>
                                        <div class="col-lg-9">
                                            <div class="row">
                                                <div class="col-lg-10 col-9">
                                                    <div class="progress">
                                                        <div class="progress-bar" role="progressbar" style="width: 90%" aria-valuenow="90" aria-valuemin="0" aria-valuemax="100"></div>
                                                    </div>
                                                </div>
                                                <div class="col-lg-2 col-3"><small><strong>5 stars</strong></small></div>
                                            </div>
                                            <!-- /row -->
                                            <div class="row">
                                                <div class="col-lg-10 col-9">
                                                    <div class="progress">
                                                        <div class="progress-bar" role="progressbar" style="width: 95%" aria-valuenow="95" aria-valuemin="0" aria-valuemax="100"></div>
                                                    </div>
                                                </div>
                                                <div class="col-lg-2 col-3"><small><strong>4 stars</strong></small></div>
                                            </div>
                                            <!-- /row -->
                                            <div class="row">
                                                <div class="col-lg-10 col-9">
                                                    <div class="progress">
                                                        <div class="progress-bar" role="progressbar" style="width: 60%" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100"></div>
                                                    </div>
                                                </div>
                                                <div class="col-lg-2 col-3"><small><strong>3 stars</strong></small></div>
                                            </div>
                                            <!-- /row -->
                                            <div class="row">
                                                <div class="col-lg-10 col-9">
                                                    <div class="progress">
                                                        <div class="progress-bar" role="progressbar" style="width: 20%" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100"></div>
                                                    </div>
                                                </div>
                                                <div class="col-lg-2 col-3"><small><strong>2 stars</strong></small></div>
                                            </div>
                                            <!-- /row -->
                                            <div class="row">
                                                <div class="col-lg-10 col-9">
                                                    <div class="progress">
                                                        <div class="progress-bar" role="progressbar" style="width: 0" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                                                    </div>
                                                </div>
                                                <div class="col-lg-2 col-3"><small><strong>1 stars</strong></small></div>
                                            </div>
                                            <!-- /row -->
                                        </div>
                                    </div>
                                    <!-- /row -->

                                    <hr>
                                    @foreach (var x in Model.comments)
                                    {


                                        <div class="review-box clearfix">
                                            <figure class="rev-thumb">
                                                <img src="img/avatar1.jpg" alt="">
                                            </figure>
                                            <div class="rev-content">

                                                

                                                <div class="rating">
                                                    @for (int i = 1; i <= 5; i++)
                                                    {
                                                        if (x.Ulduzsayi >= i)
                                                        {
                                                            <i class="icon_star voted"></i>

                                                        }
                                                        else
                                                        {
                                                            <i class="icon_star"></i>
                                                        }
                                                    }

                                                    @*<i class="icon_star voted"></i>
        <i class="icon_star voted"></i>
        <i class="icon_star voted"></i>*@

                                                </div>
                                                <div class="rev-info">
                                                    <div  >@x.Ulduzsayi</div>
                                                    @x.User.Ad
                                                </div>
                                                <div class="rev-info">
                                                    @x.Basliq  - @x.Tarix.ToString("dd.mm.yyyy")
                                                </div>
                                                <div class="rev-text">
                                                    <p>
                                                        @x.Metn
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                        <!-- End review-box -->

                                    }
                                    <!-- End review-box -->
                                </div>
                                <!-- End review-container -->
                                <hr>
                                <div class="text-end"><a href="@Url.Action("YeniComment","FindDoctorList",new {Id=Model.doctor.Id})" class="btn_1 add_bottom_15">Rey Yazmaq</a></div>
                            </div>
                            <!-- /tab_3 -->
                        </div>
                    

                    <!-- /tab-content -->
                </div>
                <!-- /tabs_styled -->
            </div>
            <!-- /col -->
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</main>

