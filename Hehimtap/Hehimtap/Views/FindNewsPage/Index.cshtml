    <!-- BASE CSS -->
    <link href="~/Hekim/menu_2/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Hekim/menu_2/css/style.css" rel="stylesheet">
    <link href="~/Hekim/menu_2/css/menu.css" rel="stylesheet">
