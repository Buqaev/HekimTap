    <!-- YOUR CUSTOM CSS -->
    <link href="~/Hekim/menu_2/css/custom.css" rel="stylesheet">

</head>

<body>

 

    <main>
        <div id="breadcrumb">
            <div class="container">
                <ul>
                    <li><a href="@Url.Action("Index","FindNewsPage")">Xeberller</a></li>
                    @if (Session["Id"] != null)
                    {
                    <li><a href="@Url.Action("NewsDetay","FindNewsPage")">XeberDetay</a></li>
                    }
                    
                </ul>
            </div>
        </div>
        <!-- /breadcrumb -->

        <div class="container margin_60">
            <div class="main_title">
                <h1>Hekim Xeberleri</h1>
                <p>Asagida Hekimlerimiz terefinde verilen melumatlara , gunerzinde riayet etmeniz tovsiye edilir</p>
            </div>
            <div class="row">
                <div class="col-lg-9">
                    @foreach (var x in Model.news)
                    {
                        <article class="blog wow fadeIn">
                            <div class="row g-0">
                                <div class="col-lg-7">
                                    <figure>
                                        <a href="@Url.Action("NewsDetay","FindNewsPage",new {Id=x.Id})"><img src="~/Images/@x.Sekil" alt=""><div class="preview"><span>Read more</span></div></a>
                                    </figure>
                                </div>
                                <div class="col-lg-5">
                                    <div class="post_info">
                                        <small>@x.Tarix.ToString("dd.mm.yyyy")</small>
                                        <h3><a href="@Url.Action("NewsDetay","FindNewsPage",new {Id=x.Id})">@x.Mezmun</a></h3>
                                        <p>@x.Metn</p>
                                        <ul>
                                            <li>
                                                <div class="thumb"><img src="img/thumb_blog.jpg" alt=""></div> Admin
                                                <div class="thumb"><img src="img/thumb_blog.jpg" alt=""></div>
                                            </li>
                                            <li><i class="icon_comment_alt"></i>@x.Reviews.Count</li>

                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </article>
                        <!-- /article -->

                    }

                    <!-- /article -->




                    <nav class="mt-3">
                        <ul class="pagination pagination-sm">
                            <li class="page-item disabled">
                                @if (ViewBag.Page - 1 != 0)
                                {
                                    <a class="page-link" href="@Url.Action("Index","FindNewsPage",new { page = ViewBag.Page-1  , p = ViewBag.Axtaris, CatId = ViewBag.CatId , TagId = ViewBag.TagId})">Əvvəlki</a>
                                }
                            </li>
                            @for (int i = 1; i <= ViewBag.TotalPage; i++)
                            {
                                <li class="page-item  @(i==ViewBag.Page?"active":"")"><a class="page-link" href="@Url.Action("Index","FindNewsPage",new { page = i, p = ViewBag.Axtaris, CatId = ViewBag.CatId , TagId = ViewBag.TagId })">@i</a></li>
                            }
                            <li class="page-item">
                                @if (ViewBag.Page + 1 <= ViewBag.TotalPage)
                                {
                                    <a class="page-link" href="@Url.Action("Index","FindNewsPage",new { page = ViewBag.Page+1 , p = ViewBag.Axtaris , CatId = ViewBag.CatId , TagId = ViewBag.TagId})">Sonrakı</a>
                                }
                            </li>
                        </ul>
                    </nav>


                    @*<nav aria-label="...">
            <ul class="pagination pagination-sm">
                <li class="page-item disabled">
                    <a class="page-link" href="#" tabindex="-1">Previous</a>
                </li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#">Next</a>
                </li>
            </ul>
        </nav>*@
                    <!-- /pagination -->
                </div>
                <!-- /col -->

                <aside class="col-lg-3">
                    <div class="widget">
                        <form method="post" action="@Url.Action("Index", "FindNewsPage")">
                     
                            <div class="form-group">
                                <input type="text" name="p" id="search" class="form-control" placeholder="Xeberin adini daxiledin ">
                            </div>
                            <button type="submit" id="submit" class="btn_1"> Axdar</button>
                        
                        </form>
                    </div>
                    <!-- /widget -->

                    <div class="widget">
                        <div class="widget-title">
                            <h4>Xeber Posdu</h4>
                        </div>
                        <ul class="comments-list">
                            @foreach (var x in Model.news2)
                            {


                            <li>
                                <div class="alignleft">
                                    <a href="#0"><img src="~/Images/@x.Sekil" alt=""></a>
                                </div>
                                <small>@x.Tarix</small>
                                <h3><a href="#" title="">@x.Basliq</a></h3>
                            </li>

                            }
                        </ul>
                    </div>
                    <!-- /widget -->

                    <div class="widget">
                        <div class="widget-title">
                            <h4>Blog Categories</h4>
                        </div>
                        <ul class="cats">
                            @foreach(var cat in Model.newsCategories) {
                            <li>
                            <a href="@Url.Action("Index","FindNewsPage", new {CatId = cat.Id })">@cat.Ad 
                                <span>(@cat.News.Count())</span></a>
                            </li>
                            }
                           
                        </ul>
                    </div>
                    <!-- /widget -->

                    <div class="widget">
                        <div class="widget-title">
                            <h4>Teq-ler</h4>
                        </div>
                        <div class="tags">
                            @foreach (var tag in Model.Teqs)
                            {
                                <a href="@Url.Action("Index","FindNewsPage", new {TagId = tag.Id })">@tag.Ad</a>
                            }

                        </div>
                    </div>
                    <!-- /widget -->

                </aside>
                <!-- /aside -->
            </div>
            <!-- /row -->
        </div>
        <!-- /container -->
    </main>


</body>

</html>
